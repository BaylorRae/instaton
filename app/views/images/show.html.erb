<h2>Image</h2>

<div class="row">
  <div class="col-md-9">
    <div class="card">
      <div class="card-body p-2">
        <%= image_tag @image.image, class: 'd-block w-100' %>

        <p><%= @image.description %></p>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <%= link_to @image.user.full_name, profile_path(@image.user.username) %>
  </div>
</div>
